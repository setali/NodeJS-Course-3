<%- include('../../layouts/admin-top.ejs') %>

<a href="/admin/article/create" class="action">Create Article</a>

<div class="list-items">
  <table>
    <thead>
      <tr>
        <td>ID</td>
        <td>Title</td>
        <td>Author</td>
        <td>Actions</td>
      </tr>
    </thead>
    <tbody>
      <% for (const article of articles) { %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.user.username %></td>
        <td>
          <a href="/admin/article/<%= article.id %>" class="action inline">
            Show
          </a>

          <a href="/admin/article/<%= article.id %>/edit" class="action inline">
            Edit
          </a>

          <%- include('./article-delete-form.ejs', {article}) %>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include('../../layouts/admin-bottom.ejs') %>
